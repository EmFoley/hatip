<%= form_for [current_user, Post.new], remote: true do |f| %>
  <div class="form-group field-holder">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group field-holder">
    <%= f.label :youtube_url %>
    <%= f.text_field :youtube_url %>
  </div>
  <div class="form-group field-holder">
    <%= f.label :description %>
    <%= f.text_area :description, :cols => "40", :rows => "5" %>
  </div>
  <div class="field-holder">
    <%= f.submit :id => "create-post-button" %>
  </div>
<% end %>